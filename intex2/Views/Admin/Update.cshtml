@model User
@{
    ViewData["Title"] = "UPDATE USER";
}

<section class="vh-100" style="background-color: #fff;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <h2 class="text-center fw-bold mb-5">Update Your Account</h2>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <form asp-action="Update" method="post">
                            <input type="hidden" name="id" value="@Model.NetUserId"/>
                            <div class="row">
                                <!-- Left column -->
                                <div class="col-md-6">
                                    <div class="form-outline mb-4">
                                        <label asp-for="Name" class="form-label">UserName</label>
                                        <input asp-for="Name" class="form-control" />
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="FirstName" class="form-label"></label>
                                        <input asp-for="FirstName" class="form-control" />
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="LastName" class="form-label"></label>
                                        <input asp-for="LastName" class="form-control" />
                                    </div>
                                    <div class="form-outline mb-4">
                                        <P>Email: @Model.Email</p>
                                        <input asp-for="Email" class="form-control" type="hidden"/>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label for="Password" class="form-label">New Password</label>
                                        <input name="Password" class="form-control" />
                                    </div>
                                </div>

                                <!-- Right column -->
                                <div class="col-md-6">
                                    <div class="form-outline mb-4">
                                        <P>Birthdate: @Model.BirthDate</p>
                                        <input asp-for="BirthDate" class="form-control" type="hidden"/>
                                    </div>
                                    <div class="mb-4">
                                        <select asp-for="CountryOfResidence" class="form-select">
                                            <option value="">Select a country</option>
                                            <option value="USA">USA</option>
                                            <option value="China">China</option>
                                            <option value="India">India</option>
                                            <option value="Russia">Russia</option>
                                            <option value="United Kingdom">United Kingdom</option>
                                        </select>
                                    </div>
                                    <div class="mb-4">
                                        <select asp-for="Gender" class="form-select">
                                            <option value="">Select Gender</option>
                                            <option value="M">Male</option>
                                            <option value="F">Female</option>
                                        </select>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="Age" class="form-label"></label>
                                        <input asp-for="Age" class="form-control" type="number" min="0" max="120"/>
                                    </div>
                                </div>
                            </div>
                            <div class="form-check d-flex justify-content-center mb-4">
                                <input value="true" id="twoFactor" name="twoFactor" type="checkbox" class="form-check-input" />
                                <label for="twoFactor" class="form-check-label">Two-Factor Authentication</label>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
