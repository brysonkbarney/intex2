@using intex2.Infrastructure
@model Product

<div class="card m-1 p-1">
    <h4>@Model.Name
        <span class="badge rounded-pill bg-primary text-white float-end"><small>@Model.NumParts pieces</small></span>
    </h4>
    
    <ul>
        <li>Set Name: @Model.Name</li>
        <li>Pieces: @Model.NumParts</li>
        <li>Year: @Model.Year</li>
    </ul>
    <form id=@Model.ProductId method="post" asp-page="/Cart">
        <input type="hidden" asp-for="@Model.ProductId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn-outline-success btn-sm float-end">Product Details</button>
    </form>
</div>