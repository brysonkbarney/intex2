@model Login

@{
    ViewData["Title"] = "Login";
}

<main>
    <link rel="stylesheet" href="~/css/loginpage.css" />
    <div class="split-screen">
        <div class="left-side">
             <img src="@Url.Content("~/images/StarWars.jpg")" alt="Star Wars Image" class="responsive-image" />
        </div>
        
        <div class="right-side">
            <div class="login-container">
                <div class="login-card">
                    <div class="login-header">
                        <h2>Login</h2>
                    </div>
                    <form asp-action="Login" method="post" class="login-form">
                        <input type="hidden" asp-for="ReturnUrl"/>
                        <div class="form-group">
                            <input asp-for="Email" class="form-control" placeholder="Email Address"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="Password"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <input asp-for="Remember" type="checkbox" class="form-check-input" id="RememberCheck"/>
                            <label class="form-check-label" for="RememberCheck">Keep me logged in</label>
                        </div>
                        <button class="btn btn-primary btn-block" type="submit">Log in</button>
                        <a asp-action="ForgotPassword">Forgot password?</a>
                    </form>
                    <div class="social-login">
                        <p>Or continue with</p>
                        <a asp-action="GoogleLogin" class="btn-google">
                            <img src="~/images/GoogleCircleLogo.png" alt="Google sign-in"/>
                            Sign in with Google
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>