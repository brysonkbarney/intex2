@model User
@{
    ViewData["Title"] = "ADD DETAILS";
}
<br/><br/><br/> <br/>
<p>Thank you for logging in with Google! 
    Please fill out a few more account details that Google is unable to give us.
    Providing us with these details will allow us to give you better personal recommendations</p>
<div asp-validation-summary="All" class="text-danger"></div>
  
<form method="post" asp-controller="Admin" asp-action="AddGoogleDetails">
    <input hidden asp-for="NetUserId" class="form-control"/>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" required/>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" required/>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate"></label>
        <input asp-for="BirthDate" class="form-control" required/>
    </div>
    <div class="form-group">
        <label asp-for="CountryOfResidence">Country Of Residence</label>
        <select asp-for="CountryOfResidence" class="form-control" required>
            <option value="">Select a country</option>
            <option value="USA">USA</option>
            <option value="China">China</option>
            <option value="India">India</option>
            <option value="Russia">Russia</option>
            <option value="United Kingdom">United Kingdom</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" class="form-control" required>
            <option value="">Select Gender</option>
            <option value="M">Male</option>
            <option value="F">Female</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" required/>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
    
    