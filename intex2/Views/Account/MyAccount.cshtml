@{
    var user = await UserManager.GetUserAsync(User);
}
@{
    ViewData["Title"] = "Account";
}
@model User;

<section class="vh-100" style="background-color: #fff;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <h2 class="text-center fw-bold mb-5">Your Account</h2>
                        <div class="row">
                            <div class="col-md-6">
                                <!-- Left column -->
                                <div class="form-outline mb-4">
                                    <label class="form-label">Username</label>
                                    <input type="text" id="username" class="form-control" value="@Model.Name" disabled />
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label">First Name</label>
                                    <input type="text" id="firstname" class="form-control" value="@Model.FirstName" disabled />
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label">Last Name</label>
                                    <input type="text" id="lastname" class="form-control" value="@Model.LastName" disabled />
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label">Your Email</label>
                                    <input type="email" id="email" class="form-control" value="@Model.Email" disabled />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <!-- Right column -->
                                <div class="form-outline mb-4">
                                    <label class="form-label">Birth Date</label>
                                    <input type="date" id="birthdate" class="form-control" value="@(Model.BirthDate?.ToString("yyyy-MM-dd") ?? "")" disabled />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Country Of Residence</label>
                                    <input type="text" id="country" class="form-control" value="@Model.CountryOfResidence" disabled />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Gender</label>
                                    <input type="text" id="gender" class="form-control" value="@Model.Gender" disabled />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Age</label>
                                    <input type="text" id="age" class="form-control" value="@Model.Age.ToString()" disabled />
                                </div>
                            </div>
                        </div>

                        <!-- Two Factor Authentication -->
                        <div class="row">
                            <div class="col-12 text-center mb-4">
                                <div class="form-check d-flex justify-content-center">
                                    <input type="checkbox" class="form-check-input" id="twofactor" checked="@Model.TwoFactor" disabled />
                                    <label class="form-check-label" for="twofactor">
                                        Two Factor Authentication Enabled
                                    </label>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Buttons -->
                        <div class="row">
                            <div class="col-12 text-center my-4">
                                <a class="btn btn-primary btn-lg" asp-controller="Admin" asp-action="Update" asp-route-id="@user.Id">
                                    Update
                                </a>
                                <a asp-controller="Account" asp-action="Logout" class="btn btn-danger btn-lg ms-2">Logout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
