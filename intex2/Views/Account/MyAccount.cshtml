@{
    var user = await UserManager.GetUserAsync(User);
}
@model User;
<p>Username: @Model.Name</p>
<p>Email: @Model.Email</p>
<p>BirthDate: @Model.BirthDate</p>
<p>Country Of Residence: @Model.CountryOfResidence</p>
<p>Gender: @Model.Gender</p>
<p>To change any details about your account, including to enable two factor authentication, click the button below.</p>
<a class="btn btn-sm btn-primary" asp-controller="Admin" asp-action="Update" asp-route-id="@user.Id">
    Update
</a>

<br/>
<p>Click to log out</p>
<a asp-controller="Account" asp-action="Logout" class="btn btn-danger btn-sm">Logout</a>