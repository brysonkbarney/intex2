@{
    ViewData["Title"] = "Checkout Success";
}
@model Order

<style>
    :root {
        --lego-yellow: #f9df1c;
        --lego-yellow-darker: #ecd107;
        --lego-black: #303030;

        --size-eye: 12px;
        --size-hair: 15px;
        --size-neck: 10px;

        --smile-rotation: 0deg;
    }

    /* Head */
    .lego-head {
        position: relative;
        width: 103px;
        height: 83px;
        background: var(--lego-yellow);
        margin: 50px auto 0;
        border-radius: 20px;
        /* Neck and hair */
        box-shadow: 0 calc(-25px - var(--size-hair)) 0 -25px var(--lego-yellow-darker),
        0 calc(25px + var(--size-neck)) 0 -25px var(--lego-yellow-darker);
    }
    /* Eyes */
    .lego-head::before {
        content: "";
        position: absolute;
        top: 25px;
        left: 50%;
        transform: translateX(-175%);
        width: var(--size-eye);
        height: var(--size-eye);
        border-radius: 100%;
        background: var(--lego-black);
        /* Second eye */
        box-shadow: 30px 0 0 0 var(--lego-black);
    }

    /* Mouth */
    .lego-head::after {
        content: "";
        position: absolute;
        top: 50px;
        left: 50%;
        transform: translateX(-50%) rotateX(var(--smile-rotation));
        width: 35px;
        height: 10px;
        border: 5px solid var(--lego-black);
        border-top: 0;
        border-radius: 0 0 20px 20px / 0 0 10px 10px;
    }

    h1 {
        margin-top: 50px;
        text-align: center;
    }

    .input {
        margin: 50px auto 0;
        text-align: center;
    }

    label {
        display: block;
        margin-bottom: 10px;
        font-size: 1rem;
    }

</style>


<div class="container" style="height: 100vh; display: flex; align-items: center; justify-content: center;">
    <div style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #333; padding: 20px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); max-width: 1200px; width: 100%; background: #f7f7f7; display: flex; align-items: center;">
        <!-- Order Details Section -->
        <div style="flex-grow: 2; padding: 20px; margin-right: 20px;">
            <p style="font-size: 18px; color: #27ae60; margin-bottom: 20px;">Your order was successful and will be shipped soon.</p>
            <h2 style="color: #333; margin-top: 0;">Order Details:</h2>
            <p><strong>Transaction ID:</strong> @Model.TransactionId</p>
            <p><strong>Customer ID:</strong> @Model.CustomerId</p>
            <p><strong>Date:</strong> @Model.Date</p>
            <p><strong>Amount:</strong> @Model.Amount</p>
            <p><strong>Type of Transaction:</strong> @Model.TypeOfTransaction</p>
            <p><strong>Shipping Address:</strong> @Model.ShippingAddress</p>
        </div>

        <!-- Satisfaction Section -->
        <div style="flex-shrink: 0; flex-basis: 30%; padding: 20px;">
            <h1 style="margin-top: 0; color: #333;">Are you satisfied?</h1>
            <div class="lego-head" style="margin: 20px 0;"></div>
            <div class="input">
                <label for="satisfaction-slider" style="display: block; margin-bottom: 10px;">Satisfaction: <span class="js-satisfaction">10</span>/20</label>
                <input id="satisfaction-slider" class="js-satisfaction-slider" type="range" min="0" max="20" step="1" value="10" style="width: 100%;">
            </div>
        </div>
    </div>
</div>





@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var slider = document.querySelector('.js-satisfaction-slider');
        var satisfactionDisplay = document.querySelector('.js-satisfaction');
        var legoHead = document.querySelector('.lego-head');

        slider.addEventListener('input', function () {
            var per = slider.value / slider.max;
            var deg = 180 - 180 * per;
            satisfactionDisplay.textContent = Math.round(per * 20);
            legoHead.style.background = `linear-gradient(to top, rgba(248,80,50,${1 - per}) 0%, var(--lego-yellow) ${100 - 100 * per}%)`;
            document.documentElement.style.setProperty('--smile-rotation', `${deg}deg`);
        });
    });
</script>
}
